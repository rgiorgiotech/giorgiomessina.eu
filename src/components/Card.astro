---
import { ArrowUpRight } from 'lucide-react';

interface Props {
  title: string;
  subtitle: string;
  description: string;
  href: string;
}

const { title, subtitle, description, href } = Astro.props;
---

<a 
  href={href}
  target="_blank"
  rel="noopener noreferrer"
  class="group relative flex flex-col p-6 bg-white rounded-2xl border border-slate-200 shadow-sm transition-all duration-300 hover:shadow-lg hover:shadow-orange-500/10 hover:border-orange-300 hover:-translate-y-1"
>
  <div class="absolute top-6 right-6 text-orange-400 opacity-0 transform translate-x-2 group-hover:opacity-100 group-hover:translate-x-0 transition-all duration-300">
    <ArrowUpRight className="w-5 h-5" />
  </div>

  <h3 class="text-xl font-bold text-slate-800 mb-2 group-hover:text-orange-600 transition-colors pr-6">
    {title}
  </h3>
  
  <p class="text-slate-500 text-sm font-medium mb-4 flex-grow">
    {subtitle}
  </p>
  
  <div class="mt-auto pt-4 border-t border-slate-100">
    <span class="inline-flex items-center px-2.5 py-0.5 rounded-md text-xs font-medium bg-orange-50 text-orange-700 border border-orange-100">
      {description}
    </span>
  </div>
</a>
